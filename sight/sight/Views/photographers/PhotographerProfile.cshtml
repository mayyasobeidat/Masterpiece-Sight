@model sight.Models.photographer



@{
    ViewBag.Title = "PhotographerProfile";
    Layout = "~/Views/Shared/_LayoutPhotographerProfile.cshtml";
}


<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex flex-column justify-content-center align-items-center" style="background-image: url('@Url.Content("~/assetsUser/img/" + Model.coverPhoto)')">
    <div class="hero-container" data-aos="fade-in">
        <h1>@Html.DisplayFor(model => model.FullName)</h1>
        <p>I'm <span class="typed" data-typed-items="Photographer, Freelancer "></span></p>

    </div>
</section>
<!-- End Hero -->
<!-- ======= About Section ======= -->
<section id="about" class="about">
    <div class="container">

        <div class="section-title">
            <h2>About</h2>
            <p>@Html.DisplayFor(model => model.bio)</p>
        </div>

        <div class="row">
            <div class="col-lg-4" data-aos="fade-right">
                <img src="~/assetsUser/img/@Html.DisplayFor(model => model.profilePhoto)" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Html.DisplayFor(model => model.PhoneNumber)</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Html.DisplayFor(model => model.AspNetUser.Email)</span></li>

                            <li><i class="bi bi-chevron-right"></i> <strong>The cities I shoot in:</strong> <span></span></li>
                            <ol style="line-height: 5px;">
                                @foreach (var item in Model.photographer_cities)
                                {
                                    <li>@item.city.cityName</li>
                                }
                            </ol>


                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@Html.DisplayFor(model => model.age)</span></li>

                            <li><i class="bi bi-chevron-right"></i> <strong>Type of Photography:</strong> <span></span></li>
                            <ol style="line-height: 5px;">
                                @foreach (var item in Model.PhotographerTypes)
                                {
                                    <li>@item.PhotographyType.TypeName</li>
                                }
                            </ol>

                        </ul>
                    </div>
                </div>
                <!-- ======= Facts Section ======= -->
                <section id="facts" class="facts">
                    <div class="container">



                        <div class="row no-gutters">

                            <div class="col-lg-4 col-md-6 d-md-flex align-items-md-stretch" data-aos="fade-up">
                                <div class="count-box">
                                    <i class="bi bi-emoji-smile"></i>
                                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.clientsCount" data-purecounter-duration="1" class="purecounter"></span>
                                    <p><strong>Happy Clients</strong> @*consequuntur quae*@</p>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-6 d-md-flex align-items-md-stretch" data-aos="fade-up" data-aos-delay="100">
                                <div class="count-box">
                                    <i class="bi bi-journal-richtext"></i>
                                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.sessionsCount" data-purecounter-duration="1" class="purecounter"></span>
                                    <p><strong>Photo sessions</strong> @*adipisci atque cum quia aut*@</p>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-6 d-md-flex align-items-md-stretch" data-aos="fade-up" data-aos-delay="300">
                                <div class="count-box">
                                    <i class="bi bi-people"></i>
                                    <span data-purecounter-start="0" data-purecounter-end="32" data-purecounter-duration="1" class="purecounter"></span>
                                    <p><strong>Hard Workers</strong> rerum asperiores dolor</p>
                                </div>
                            </div>

                        </div>

                    </div>
                </section>
                <!-- End Facts Section -->

            </div>
        </div>

    </div>
</section>
<!-- End About Section -->
<!-- ======= Portfolio Section ======= -->
<!-- ======= Portfolio Section ======= -->


<section id="portfolio" class="portfolio section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Gallery</h2>
        </div>

        <div class="row" data-aos="fade-up">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach (var type in Model.photos.Select(m => m.PhotographyType1.TypeName).Distinct())
                    {
                        <li data-filter=".@type">
                            @type
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">
            @foreach (var item in Model.photos)
            {
                <div class="col-lg-4 col-md-6 portfolio-item @Html.DisplayFor(modelItem => item.PhotographyType1.TypeName)">
                    <div class="portfolio-wrap">
                        <img src="~/assetsUser/img/portfolio/@Html.DisplayFor(modelItem => item.photo_url)" class="img-fluid" alt="@Html.DisplayFor(modelItem => item.title)">
                        <div class="portfolio-links">
                            <a href="~/assetsUser/img/portfolio/@Html.DisplayFor(modelItem => item.photo_url)" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@Html.DisplayFor(modelItem => item.title)"><i class="bx bx-plus"></i></a>
                            <a href="/photographers/PhotographerProfile/@Html.DisplayFor(modelItem => item.photographer_id)" title="Go to the photographer's page" target="_blank"><i class="bx bx-link"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>


<!-- End Portfolio Section -->
<!-- End Portfolio Section -->
