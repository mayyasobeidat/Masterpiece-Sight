@model sight.Models.PhotographyType

@{
    ViewBag.Title = "Delete Service";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PhotographyType</h4>
    <hr />


    @if (ViewBag.Errors != null)
    {
        <div class="alert alert-danger"><b>Warning!! </b>You cannot delete a type of photography added to the portfolio of your photographers!!</div>
    }
    <div class="row">
        <dl class="col-md-6 col-sm-12">


            <dt><b style="color: #d9d9d9;">Photography Type:</b></dt>


            <dd>
                @Html.DisplayFor(model => model.TypeName)
            </dd>

            <dt><b style="color: #d9d9d9;">Description:</b></dt>


            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>
        <div class="col-md-6 col-sm-12">
            <img src="~/assetsUser/img/@Model.ImageUrl" name="photo" alt="photo" id="myImage" class="img-fluid">

        </div>
    </div>





    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back", "Index")
        </div>
    }
</div>
