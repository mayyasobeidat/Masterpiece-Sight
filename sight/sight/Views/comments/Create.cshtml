@model sight.Models.comment

@{
    ViewBag.Title = "Create";
    Layout = null;
}


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

   
<div class="form-floating mb-3" id="com">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

<textarea id="comment1" name="comment1" class="form-control" placeholder="Write your comment here" style="height: 250px;" required></textarea>

</div>
    <div class="d-grid">
        <input type="submit" value="Post comment" class="btn btn-warning btn-lg" />
    </div>

}

