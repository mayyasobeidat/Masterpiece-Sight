@{
    ViewBag.Title = "Contact";
}


<img src="~/assetsUser/img/conn.png" width="100%">
<main id="main">



    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Contact</h2>
                <p style="color: #ddd;"><span style="color: #F2C511;">C</span>ontact <span style="color: #F2C511;">U</span>s</p>
            </div>

            <div class="row mt-5">
                <div class="col-lg-8 mt-5 mt-lg-0">

                    <form method="post" action="@Url.Action("SendEmail", "Home")">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" name="Name" class="form-control" placeholder="Your Name" required>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email" class="form-control" name="Email" placeholder="Your Email" required>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="Subject" placeholder="Subject" required>
                        </div>
                        <div class="form-group mt-3">
                            <textarea class="form-control" name="Message" rows="5" placeholder="Message" required></textarea>
                        </div>
                        <div class="my-3">
                        </div>
                        <div class="col-md-12">
                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-success">@TempData["Message"]</div>
                            }

                        </div>
                        <div class="mt-3">
                            <input type="submit" value="Send Message" class="btn btn-warning">
                        </div>
                    </form>
                    <br />
                </div>
                <div class="col-lg-4">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <p>Irbid, Jordan</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>sight@photographer.net</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Call:</h4>
                            <p>+962778095499</p>
                        </div>

                    </div>

                </div>



            </div>

        </div>
    </section>
    <!-- End Contact Section -->





</main><!-- End #main -->

