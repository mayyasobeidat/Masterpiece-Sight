            <div>
                <h2 class="myWords">Where creativity and technology enter the picture.</h2>
            </div>
            <div class="aboutSection">
                <img src="~/assetsUser/img/2222.png" width="40%">
                <p class="aboutText" data-aos="fade-left" data-aos-delay="100">

                    Hello and welcome to our website!<br>
                    We created this site to bring photographers in our community and people who need their services together.
                    Our goal was to make it easy to find a trusted photographer and see their work, as well as to make communication and booking sessions easier.
                    <br><br><a href="#about" style="color: #FEF445; text-decoration: none;">Get to know us more..</a>
                </p>
            </div>
            <div>
                <img src="~/assetsUser/img/1111.png" width="100%" class="imgAbout">
                <img src="~/assetsUser/img/1111res.png" width="100%" class="imgAbout2">

            </div>
        </div>
    </section>
    <!-- End About Section -->
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title">
                <h2>Services</h2>
                <p style="color: #ddd;"><span style="color: #F2C511;">C</span>heck <span style="color: #F2C511;">o</span>ur <span style="color: #F2C511;">S</span>ervices</p>
            </div>


            <div class="row">
                <div class="col-6">
                    <h3 class="mb-3"></h3>
                </div>

                <div class="col-6 text-md-end">
                    <a class="btn btn-warning mb-3 me-1"
                       href="#carouselExampleIndicators2" role="button"
                       data-bs-slide="prev">
                        <i class="fa fa-arrow-left"></i>
                    </a>
                    <a class="btn btn-warning mb-3 " href="#carouselExampleIndicators2"
                       role="button" data-bs-slide="next">
                        <i class="fa fa-arrow-right"></i>
                    </a>
                </div>

                <div class="col-12">
                    <div id="carouselExampleIndicators2" class="carousel slide"
                         data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="row">
                                    @foreach (var item in Model.Take(3))
                                    {
                                        <div class="col-md-4 mb-3">
                                            <div class="card">
                                                <img class="img-fluid" alt="100%x280"
                                                     src="~/assetsUser/img/@Html.DisplayFor(modelItem => item.ImageUrl)">
                                                <div class="card-body">
                                                    <h4 class="card-title">
                                                        @Html.DisplayFor(modelItem => item.TypeName)
                                                    </h4>
                                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                                </div>
                                            </div>
                                        </div>

                                    }

                                </div>
                            </div>

                            <div class="carousel-item">
                                <div class="row">
                                    @foreach (var item in Model.Reverse().Take(3))
                                    {


                                        <div class="col-md-4 mb-3">
                                            <div class="card">
                                                <img class="img-fluid" alt="100%x280"
                                                     src="~/assetsUser/img/@Html.DisplayFor(modelItem => item.ImageUrl)">
                                                <div class="card-body">
                                                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.TypeName)</h4>
                                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Services Section -->
    <!-- ======= Cta Section ======= -->
    <section id="cta" class="cta">
        <div class="container" data-aos="zoom-in">

            <div class="text-center">
                <h3>Join Us Now</h3>
                <p> Join us now and experience the ultimate photography platform. Connect with talented photographers, book unique shoots and bring your vision to life. Don't miss out on endless possibilities. Click the 'Join us' button below and become a part of our community today.</p>
                <a class="cta-btn" href="#">Join us</a>
            </div>

        </div>
    </section>
    <!-- End Cta Section -->
    <!-- ======= Portfolio Section ======= -->
