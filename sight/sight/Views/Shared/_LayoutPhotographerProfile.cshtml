<body>

    <!-- ======= Mobile nav toggle button ======= -->
    <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">

            <nav id="navbar" class="nav-menu navbar">
                <ul>
                    <li><a href="/photographers/photographers" class="nav-link active"><i class="bx bx-arrow-back"></i> <span>Go Back</span></a></li>
                </ul>
            </nav><!-- .nav-menu -->

            <style>
                #header .profile img{
                    height:120px;
                }
                .mmm {
                    width: 100%;
                }

                .mm {
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            </style>


            <div class="profile">
                <div class="mmm">
                    <img src="~/assetsUser/img/@Html.DisplayFor(model => model.profilePhoto)" alt="" class="img-fluid rounded-circle mm">

                </div>
                <h1 class="text-light">
                    @Html.DisplayFor(model => model.FullName)

                    @{sight.Models.sightEntities db = new sight.Models.sightEntities();


                        var cityCount = db.photographer_cities.Where(a => a.photographer_id == Model.id).Count();
                        var typeCount = db.PhotographerTypes.Where(a => a.PhotographerID == Model.id).Count();


                        if (cityCount > 0 && typeCount > 0)
                        {


                            if (User.Identity.IsAuthenticated)
                            {

                                if (User.IsInRole("Client"))
                                {
                    <a href="@Url.Action("Create", "photo_sessions", new { id = Model.id })" class="warning" style="font-family: 'Open Sans', sans-serif; font-size: 24px; font-weight: bold;">
                        <i class="fas fa-plus-square"></i>
                    </a>

                                }


                            }
                            else
                            {
                    <a href="@Url.Action("Login", "Account", new { id = Model.id })" class="warning" style="font-family: 'Open Sans', sans-serif; font-size: 24px; font-weight: bold;">
                        <i class="fas fa-plus-square"></i>
                    </a>
                                } } }

                </h1>
               
                <div class="social-links mt-3 text-center">


                    <a href="@Html.DisplayFor(model => model.twitter)" class="twitter"><i class="bx bxl-twitter"></i></a>
                    <a href="@Html.DisplayFor(model => model.facebook)" class="facebook"><i class="bx bxl-facebook"></i></a>
                    <a href="@Html.DisplayFor(model => model.instagram)" class="instagram"><i class="bx bxl-instagram"></i></a>
                    <a href="@Html.DisplayFor(model => model.linkedin)" class="linkedin"><i class="bx bxl-linkedin"></i></a>

                </div>
            </div>
         

            <nav id="navbar" class="nav-menu navbar">
                <ul>

                    <li><a href="#hero" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Profile</span></a></li>
                    <li><a href="#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
                    <li><a href="#portfolio" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Gallery</span></a></li>
                    <li><a href="#testimonials" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Testimonials</span></a></li>

                    @if (User.IsInRole("Client"))
                    {
                        <li><a href="#comment" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Reviews</span></a></li>

                    }

                </ul>
            </nav><!-- .nav-menu -->
