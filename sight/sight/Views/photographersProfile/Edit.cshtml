@model sight.Models.photographer

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_LayoutUsersPages.cshtml";
}



<style>
    .profiless img {
        height: 120px;
    }

    .mmm {
        width: 100%;
    }

    .mm {
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @@import url('https://fonts.googleapis.com/css?family=Montserrat');


    /*custom inpu file*/
    .custom-file-input {
        color: transparent;
    }

        .custom-file-input::-webkit-file-upload-button {
            visibility: hidden;
        }

        .custom-file-input::before {
            content: "▲ Upload Photo";
            color: #fff;
            display: inline-block;
            background: #ffc107;
            padding: 10px 22px;
            outline: none;
            white-space: nowrap;
            -webkit-user-select: none;
            cursor: pointer;
            font-weight: 400;
            border-radius: 2px;
            outline: none;
            box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2);
        }

        .custom-file-input:focus {
            outline: none !important;
        }

        .custom-file-input:active::before {
            transform: scale(.9) translate(0px, 2px);
            box-shadow: inset 4px 4px 5px 0px rgba(0, 0, 0, 0.20);
        }
</style>

<main id="main" class="main" style="padding-top: 60px;">




    <div class="container">
        <section class="section profile">

            <div class="row">
                <div class="col-xl-4">





                    <style>
                        .active-status {
                            color: #6ABF67; /* green */
                        }

                        .inactive-status {
                            color: red; /* red */
                        }

                        .statuss-active {
                            border: solid 5px #6abf67
                        }

                        .statuss-inactive {
                            border: solid 5px red; /* red */
                        }
                    </style>




                    @if (ViewBag.SubscriptionStartDate != null && ViewBag.SubscriptionEndDate != null && ViewBag.DaysRemaining != null && ViewBag.DaysRemaining >= 0)
                    {


                        <div class="card profiless statuss-active">
                            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center mmm">
                                <p><b>Active</b> <i class="bi bi-circle-fill active-status"></i></p>

                                <img src="~/assetsUser/img/@Model.profilePhoto" alt="Profile" class="rounded-circle mm">
                                <a href="/photographers/PhotographerProfile/@Model.id"><h2>@Model.FullName</h2></a>
                                <div class="social-links mt-2 m-3">
                                    <a href="@Model.twitter" class="twitter"><i class="bi bi-twitter"></i></a>
                                    <a href="@Model.facebook" class="facebook"><i class="bi bi-facebook"></i></a>
                                    <a href="@Model.instagram" class="instagram"><i class="bi bi-instagram"></i></a>
                                    <a href="@Model.linkedin" class="linkedin"><i class="bi bi-linkedin"></i></a>
                                </div>
                                <p>Days Remaining: <span data-purecounter-start="0" data-purecounter-end="@ViewBag.DaysRemaining" data-purecounter-duration="1" class="purecounter"></span></p>

                            </div>
                        </div>

                    }


                    else
                    {


                        <div class="card profiless statuss-inactive">
                            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center mmm ">
                                <p><b>Inactive</b> <i class="bi bi-circle-fill inactive-status"></i></p>

                                <img src="~/assetsUser/img/@Model.profilePhoto" alt="Profile" class="rounded-circle mm">
                                <a href="/photographers/PhotographerProfile/@Model.id"><h2>@Model.FullName</h2></a>
                                <div class="social-links mt-2">
                                    <a href="@Model.twitter" class="twitter"><i class="bi bi-twitter"></i></a>
                                    <a href="@Model.facebook" class="facebook"><i class="bi bi-facebook"></i></a>
                                    <a href="@Model.instagram" class="instagram"><i class="bi bi-instagram"></i></a>
                                    <a href="@Model.linkedin" class="linkedin"><i class="bi bi-linkedin"></i></a>
                                </div>

                            </div>
                        </div>

                    }






                    @if (ViewBag.SubscriptionStartDate != null && ViewBag.SubscriptionEndDate != null && ViewBag.DaysRemaining != null && ViewBag.DaysRemaining > 0)
                    {
                        <span></span>
                    }

                    else
                    {
                        if (Model.accept == true)
                        { <br>

                            <div class="card">
                                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                                    <div>
                                        <h4 style="text-align:center">
                                            Your status is now <span style="color:red">not visible </span>on our website because you have not paid the monthly subscription fee<br /><br />
                                            Hurry up to show your customers
                                        </h4>
                                    </div>
                                    @Html.Action("Pays")
                                </div>
                            </div>
                        }
                    }





                    <br />




                    <div class="card">
                        <div class="card-body profile-card pt-4 table-responsive">

                            @if (TempData["alertMessageSubscription"] != null)
                            {
                                <div class="alert alert-success">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <strong>Added successfully!</strong> ..  @TempData["alertMessageSubscription"]
                                </div>
                            }
                            @Html.Action("Index", "PhotographerPricings")

                        </div>
                    </div>

                    <br>
                    <div class="card">
                        <div class="card-body profile-card pt-4 table-responsive text-center">

                            <b>Add Photos To Your Gallery</b>
                            <p>
                                @Html.ActionLink("Go", "Create", "photos", null, new { @class = "btn btn-warning" })
                            </p>

                        </div>
                    </div>



                    <br>
                </div>





                <div class="col-xl-8">
                    @if (TempData["alertMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Success!</strong> @TempData["alertMessage"]
                        </div>
                    }
                    <div class="card">
