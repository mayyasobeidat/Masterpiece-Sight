@model sight.Models.client

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>client</h4>
    <hr />

    <div class="row">
        <dl class="col-md-6 col-sm-12">

            <dt><b style="color: #d9d9d9;">Date:</b></dt>

            <dd>
                @String.Format("{0:MM/dd/yyyy}", Model.created_at)
            </dd>

            <dt><b style="color: #d9d9d9;">Full Name:</b></dt>


            <dd>
                @Html.DisplayFor(model => model.fullName)
            </dd>

            <dt><b style="color: #d9d9d9;">Email:</b></dt>


            <dd>
                @Html.DisplayFor(model => model.AspNetUser.Email)
            </dd>


        </dl>
        <div class="col-md-6 col-sm-12">
            <img src="~/assetsUser/img/@Model.photo" name="photo" alt="photo" width="50%" class="img-fluid">

        </div>
    </div>






    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back", "Index")
        </div>
    }
</div>
