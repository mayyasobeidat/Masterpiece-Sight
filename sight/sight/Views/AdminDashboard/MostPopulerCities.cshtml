@{
    Layout = null;
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Percentage of photography bookings in each city</h6>
        <canvas id="singelBarChart" style="max-height:800px;width:100%;"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
<!--  Chart js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.7.3/dist/Chart.bundle.min.js"></script>
<!--Flot Chart-->
<script src="https://cdn.jsdelivr.net/npm/jquery.flot@0.8.3/jquery.flot.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flot-spline@0.0.1/js/jquery.flot.spline.min.js"></script>
<script>
    $.ajax({
        type: 'GET',
        url: '/AdminDashboard/MostPopulerCities',
        dataType: 'json',
        success: function (data) {
            // parse the data and use it to create the chart
            var ctx = document.getElementById("singelBarChart");
            ctx.height = 250;
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: data.labels,
                    datasets: [
                        {
                            label: "Photo Sessions",
                            data: data.values,
                            borderColor: "#000",
                            borderWidth: "1",
                            backgroundColor: "#F2C511"
                        }
                    ]
                },
                options: {
                    responsive: true,

                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        }
    });


</script>
