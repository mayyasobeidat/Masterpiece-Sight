                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <a class="btn btn-danger" href="/Account/DeleteAccount/">Delete Account</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>









                            </div>

                            @*End Bordered Tabs*@

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </div>
</main>
