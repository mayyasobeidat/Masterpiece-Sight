@model sight.Models.PhotographerPricing

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutUsersPages.cshtml";
}



<style>
    .details {
        font-size: 14px;
        color: #4a4a4a;
    }

    @@import url('https://fonts.googleapis.com/css?family=Montserrat');

    .bbb {
        background-image: url("conn.png");
        background-size: cover;
    }

    .bookCard {
        width: 60%;
        padding: 4.5%;
    }

    @@media only screen and (min-device-width: 481px) and (max-device-width:768px) {

        .bookCard {
            width: 90%;
            padding: 10%;
        }
    }

    @@media only screen and (min-device-width: 0px) and (max-device-width:480px) {

        .bookCard {
            width: 90%;
            padding: 10%;
        }
    }
</style>

<main id="main" class="main" style="padding-top: 60px;">

    <div class="container">


        <section class="section profile">



            <div class="row d-flex align-items-center justify-content-center">

                <div class="card bookCard">



                    <div id="form3">





                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()


                        <div class="form-horizontal">
                            <h4>Pricing for photo sessions</h4>
                            <h5>@Model.PhotographyType.TypeName</h5>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID)


                            <div class="table-bordered table table-hover">
                                <div class="row">
                                    <div class="col-md-4 border">
                                        <div>
                                            <b>60<sub>min</sub></b>
                                        </div>
                                        <div>
                                            @Html.EditorFor(model => model.PriceOneHour, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PriceOneHour, "", new { @class = "text-danger" })
                                        </div>
                                        <br />

                                    </div>

                                    <div class="col-md-4 border">

                                        <div>
                                            <b>90<sub>min</sub></b>
                                        </div>
                                        <div>
                                            @Html.EditorFor(model => model.PriceOneAndHalfHour, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PriceOneAndHalfHour, "", new { @class = "text-danger" })
                                        </div>
                                        <br />
                                    </div>
                                    <div class="col-md-4 border">
                                        <div>
                                            <b>120<sub>min</sub></b>
                                        </div>
                                        <div>
                                            @Html.EditorFor(model => model.PriceTwoHours, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PriceTwoHours, "", new { @class = "text-danger" })
                                        </div>
                                        <br />

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-warning" />
                                    <a class="btn btn-outline-warning" href="/photographersProfile/Edit"> Back </a>

                                </div>
                            </div>
                        </div>
                        }



                    </div>


                </div>
            </div>

        </section>

    </div>
</main>
<!-- End #main -->







