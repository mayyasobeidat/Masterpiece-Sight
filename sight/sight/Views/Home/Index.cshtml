<style>
    .aboutSection {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .profile-card {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        background-color: #ededed;
        padding: 10px;
        transition: all 0.3s;
    }

        .profile-card img {
            opacity: 0.8;
            filter: grayscale(20%);
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            position: relative;
            z-index: 10;
            transition: all 0.3s;
        }

    .profile-details {
        text-align: center;
        text-transform: capitalize;
        transform: translateY(-80%);
        opacity: 0;
        transition: all 0.3s;
    }

        .profile-details h3 {
            font-size: 20px;
        }

        .profile-details p {
            font-size: 14px;
            margin: 5px 0 10px;
        }

        .profile-details a {
            color: #555;
            font-size: 20px;
        }

            .profile-details a:not(:last-child) {
                margin-right: 10px;
            }

    .profile-card:hover {
        height: 270px;
        border-radius: 15px;
        padding: 25px;
    }

        .profile-card:hover img {
            opacity: 1;
            filter: grayscale(0%);
            width: 200px;
            height: 200px;
            border-radius: 15px;
            transform: translateY(-50%);
        }

        .profile-card:hover .profile-details {
            opacity: 1;
        }

    .city {
        padding: 4px;
        border-radius: 4px;
        box-shadow: 2px 2px 8px #999;
        background: #eee;
        border: none;
        outline: none;
        display: inline-block;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        cursor: pointer;
    }

    .city1 {
        position: relative;
        width: 50%;
    }
